    elif message.text.lower() == '—Ç–∏ –∫—Ä—É—Ç–∏–π':
        bot.send_message(message.chat.id, '–º–º–º –±–∞—á—É –≤–∏ –º–∞–π—Ç–µ —Ö–æ—Ä–æ—à–µ –æ–∫–æ —è–∫—â–æ –ø–æ–±–∞—á–∏–ª–∏ –≤ –º–µ–Ω—ñ –∫—Ä—É—Ç–æ–≥–æ –º–∞—á–æü¶æ.–©–∏—Ä–æ –¥—è–∫—É—é –∑–∞ –∫–æ–º–ø–ª—ñ–º–µ–Ω—Çüòò, —ñ –≤—ñ–¥ –≤–∞—Å —Ç–∞–∫–æ–∂ –≤—ñ—î –∫—Ä—É—Ç—ñ—Å—Ç—å —Å–ø—Ä–∞–≤–∂–Ω–±–æ–≥–æ –º–∞—á–æüòé')
    elif message.text.lower() == '—Ç–∏ —Ö–æ—Ä–æ—à–∏–π':
        bot.send_message(message.chat.id, '–©–æ —Å–ø—Ä–∞–≤–¥—ñü•∞?–º–º –≤–∏ –º–µ–Ω–µ –∑–∞—Å—Ç–∞–≤–∏–ª–∏ –ø–æ—á–µ—Ä–≤–æ–Ω—ñ—Ç–∏üî¥')
