@bot.message_handler(commands=['start'])
def main(message):
    bot.send_message(message.chat.id, '–ü—Ä–∏–≤—ñ—Ç–µ! –ú–µ–Ω–µ –∑–≤–∞—Ç–∏ RozmovBot. –ù–µ –ø—Ä–æ—Ç–∏ –ø–æ—Å–ø—ñ–ª–∫—É–≤–∞—Ç–∏—Å—è?')


bot.polling(none_stop=True)